-->  
  <code>
      <coding>
          <system value="http://fhir.dguv.de/ENLA/CodeSystem/DGUV-ENLA-CS-Teilberichtsinhalt" />
          <code value="AU" />
          <display value="Arbeitsunfähigkeit" />
      </coding>
