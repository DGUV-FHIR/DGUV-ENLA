    <coding>
        <system value="http://fhir.dguv.de/ENLA/CodeSystem/DGUV-ENLA-CS-Arbeitsunfaehigkeit" />
        <code value="AUFLEX" />
        <display value="Arbeitsunfähig voraussichtliche Dauer" />
    </coding>
  </valueCodeableConcept>

  <extension>
    <extension url="FlexAU">
