<!--  
    Es muss überprüft werden, dass die hier auftretende Referenz nicht leer ist und
    die korrekte Form
         <reference value="http://fhir.dguv.de/ENLA/Patient/VersichertePerson" />
    oder
        "Patient/(UUDI oder Referenz id)"
    einhalten.
-->
  <subject>
      <reference value="Patient/T37501234" />
  </subject>

<!-- 
    Das Feld effectiveDateTime sollte vorhanden sein und ein gültiges Datumsformat einhalten.
-->
  <effectiveDateTime value="2025-07-03" />
  <!--  
    Es muss überprüft werden, dass die hier auftretende Referenz nicht leer ist und
