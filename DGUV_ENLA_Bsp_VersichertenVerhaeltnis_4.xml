<?xml version="1.0" encoding="UTF-8"?>
<!--
    Author: friedhelm.matten.ext@dguv.de
    Datum:  21.07.2025

    Die vorliegende Beispiel Datei DGUV_ENLA_Bsp_VersichertenVerhaeltnis_2 dient der Validierung 
    der Datenaufnahme zu dem Versicherten Verhaeltnis.
    
    Zu beachten ist dabei ...

    Durchzuführende Massnahmen:


-->
<Coverage xmlns="http://hl7.org/fhir">
<id value="DGUV-ENLA-Bsp-VersichertenVerhaeltnis-4" />
    <meta>
        <profile value="http://fhir.dguv.de/ENLA/Coverage/DGUV-ENLA-PR-VersichertenVerhaeltnis" />
    </meta>

<!--
    Notwendige überprüfungen:

    Falls die verunfallte Person Familienversichert ist, muss überprüft werden:
        Das Element <extension url="Mitgliedsname"> muss existieren und 
        das Element valueString value="Rudi Fahrad" /> muss einen String.length > 0 enthalten.
-->
    <extension  url="http://fhir.dguv.de/Basis/Extension/DGUV-Basis-EX-Familienversicherung">
            <extension url="Familienversichert">
                <valueBoolean value="true" />
            </extension>
            <extension url="Mitgliedsname">  
                <valueString value="Rudi Fahrad" />
            </extension>
    </extension>

<!-- Ist es notwendig den Wert des status zu überprüfen? -->    
    <status value="active"/>

<!--
    Es muss sichergestellt werden, dass an dieser Stelle kein leer Eintrag vorliegt!
    Ferner muss der Eintrage die Form 
        <reference value="http://fhir.dguv.de/ENLA/Patient/VersichertePerson" />
    oder
        "Patient/f0f85552-7960-49ab-ad6f-666b3d71f94d"
    haben.
-->
    <beneficiary>
        <!-- reference value="Patient/T37501234" /-->
        <reference value="" />
    </beneficiary>
<!--
    Es muss sichergestellt werden, dass an dieser Stelle kein leer Eintrag vorliegt!
    Ferner muss der Eintrage die Form 
        <reference value="http://fhir.dguv.de/ENLA/Organization/Unfallversicherungstraeger" />
    oder
        "Organization/f0f85552-7960-49ab-ad6f-666b3d71f94d"
    haben.
-->
    <payor>
        <reference value="http://fhir.dguv.de/ENLA/Coverage/DGUV-ENLA-PR-Unfallversicherungstraeger" />
        <!-- reference value="Organization/f0f85552-7960-49ab-ad6f-666b3d71f94d"/ -->
    </payor>
</Coverage>